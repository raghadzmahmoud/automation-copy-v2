# ═══════════════════════════════════════════════════════════════
# 🔧 Environment Variables Template
# ═══════════════════════════════════════════════════════════════
# Copy this file to .env and fill in your actual values
# ═══════════════════════════════════════════════════════════════

# ═══════════════════════════════════════════════════════════════
# 🗄️ Database Configuration
# ═══════════════════════════════════════════════════════════════
DB_NAME=automation_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432

# ═══════════════════════════════════════════════════════════════
# 🤖 AI Configuration (Gemini)
# ═══════════════════════════════════════════════════════════════
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_IMAGE_MODEL=gemini-2.5-flash-image
GEMINI_EXTRACTION_MODEL=gemini-2.5-flash-lite

# ═══════════════════════════════════════════════════════════════
# 🚀 Application Configuration
# ═══════════════════════════════════════════════════════════════
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=your_secret_key_here

# ═══════════════════════════════════════════════════════════════
# 🔄 Improved Worker Configuration
# ═══════════════════════════════════════════════════════════════
WORKER_TYPE=improved
MAX_PARALLEL_JOBS=4
DEFAULT_JOB_TIMEOUT=300
ENABLE_JOB_TIMEOUTS=true
ENABLE_PARALLEL_EXECUTION=true
BROADCAST_MODE=unified                  # unified (recommended) or separate

# ═══════════════════════════════════════════════════════════════
# ⏰ Job-Specific Timeouts (seconds)
# ═══════════════════════════════════════════════════════════════
SCRAPING_TIMEOUT=600        # 10 minutes
CLUSTERING_TIMEOUT=180      # 3 minutes
REPORTS_TIMEOUT=300         # 5 minutes
SOCIAL_MEDIA_TIMEOUT=240    # 4 minutes
IMAGES_TIMEOUT=900          # 15 minutes
AUDIO_TIMEOUT=600           # 10 minutes
VIDEO_TIMEOUT=1200          # 20 minutes
PUBLISHING_TIMEOUT=300      # 5 minutes
BROADCAST_TIMEOUT=180       # 3 minutes

# ═══════════════════════════════════════════════════════════════
# ☁️ AWS S3 Configuration
# ═══════════════════════════════════════════════════════════════
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name

# S3 Folder Structure
S3_ORIGINAL_IMAGES_FOLDER=original/images/
S3_ORIGINAL_VIDEOS_FOLDER=original/videos/
S3_ORIGINAL_AUDIOS_FOLDER=original/audios/
S3_GENERATED_IMAGES_FOLDER=generated/images/
S3_GENERATED_AUDIOS_FOLDER=generated/audios/
S3_GENERATED_VIDEOS_FOLDER=generated/videos/

# ═══════════════════════════════════════════════════════════════
# 🌐 Google Cloud Configuration
# ═══════════════════════════════════════════════════════════════
GOOGLE_APPLICATION_CREDENTIALS=/app/your-service-account.json
GOOGLE_CREDENTIALS_JSON=your_google_credentials_json_here

# ═══════════════════════════════════════════════════════════════
# 📘 Facebook Configuration
# ═══════════════════════════════════════════════════════════════
FB_GAZA_ACCESS_TOKEN=your_facebook_access_token_here
FB_GAZA_PAGE_ID=your_facebook_page_id_here
FB_DOT_ACCESS_TOKEN=your_facebook_dot_access_token_here
FB_DOT_PAGE_ID=your_facebook_dot_page_id_here

# ═══════════════════════════════════════════════════════════════
# 📷 Instagram Configuration
# ═══════════════════════════════════════════════════════════════
IG_GAZA_USER_ID=your_instagram_user_id_here
FB_gaza_ACCESS_TOKEN=your_instagram_access_token_here

# ═══════════════════════════════════════════════════════════════
# 📱 Telegram Configuration
# ═══════════════════════════════════════════════════════════════
TG_BOT_TOKEN=your_telegram_bot_token_here
TG_CHAT_ID=your_telegram_chat_id_here

# ═══════════════════════════════════════════════════════════════
# 🌐 API Configuration
# ═══════════════════════════════════════════════════════════════
API_BASE_URL=http://localhost:8000

# ═══════════════════════════════════════════════════════════════
# 🐍 Python Configuration
# ═══════════════════════════════════════════════════════════════
PYTHONPATH=/app
PYTHONUNBUFFERED=1
PLAYWRIGHT_BROWSERS_PATH=/ms-playwright