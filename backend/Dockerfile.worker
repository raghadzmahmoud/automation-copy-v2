# ═══════════════════════════════════════════════════════════════
# 🚀 Production Worker Dockerfile for Railway
# ═══════════════════════════════════════════════════════════════
# Build context: backend/
# Command: docker build -f Dockerfile.worker -t worker .
# Python Version: 3.11
# ═══════════════════════════════════════════════════════════════

# استخدام Python 3.11 مع Playwright
FROM python:3.11-slim-bookworm

# ═══════════════════════════════════════════════════════════════
# System Configuration
# ═══════════════════════════════════════════════════════════════

ENV DEBIAN_FRONTEND=noninteractive \
    TZ=UTC \
    PYTHONPATH=/app \
    PYTHONUNBUFFERED=1 \
    PLAYWRIGHT_BROWSERS_PATH=/ms-playwright \
    FONTCONFIG_PATH=/etc/fonts \
    FC_LANG=ar

# ═══════════════════════════════════════════════════════════════
# System Dependencies
# ═══════════════════════════════════════════════════════════════

RUN apt-get clean && \
    rm -rf /var/lib/apt/lists/* && \
    apt-get update --fix-missing && \
    apt-get install -y --no-install-recommends \
        gcc \
        g++ \
        libpq-dev \
        ffmpeg \
        ca-certificates \
        curl \
        wget \
        gnupg && \
    rm -rf /var/lib/apt/lists/* && \
    apt-get clean

# ═══════════════════════════════════════════════════════════════
# Application Setup
# ═══════════════════════════════════════════════════════════════

WORKDIR /app

# Copy requirements first (better caching)
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Install Playwright browsers
RUN python -m playwright install chromium && \
    python -m playwright install-deps chromium

# Copy all application code
COPY . .

# Ensure fonts directory exists
RUN mkdir -p /app/fonts && \
    if [ -d fonts ]; then cp -r fonts/* /app/fonts/ 2>/dev/null || true; fi

# ═══════════════════════════════════════════════════════════════
# Directory Setup
# ═══════════════════════════════════════════════════════════════

RUN mkdir -p /app/app/logs \
             /app/logs \
             /app/temp && \
    chmod -R 755 /app

# ═══════════════════════════════════════════════════════════════
# Verification (Optional - comment out if build fails)
# ═══════════════════════════════════════════════════════════════

RUN echo "═══════════════════════════════════════════════════════════" && \
    echo "🔍 Verifying Installation" && \
    echo "═══════════════════════════════════════════════════════════" && \
    echo "📦 Python version:" && \
    python --version && \
    echo "" && \
    echo "📦 Key packages:" && \
    pip list | grep -E "(google|psycopg2|fastapi|playwright|arabic)" || echo "Packages installed" && \
    echo "" && \
    echo "� FFmpeg:" && \
    ffmpeg -version | head -1 || echo "FFmpeg installed" && \
    echo "" && \
    echo "📁 Files:" && \
    ls -la /app/ | head -10 && \
    echo "" && \
    echo "✅ Build complete" && \
    echo "═══════════════════════════════════════════════════════════"

# ═══════════════════════════════════════════════════════════════
# Worker Configuration
# ═══════════════════════════════════════════════════════════════
# MAX_WORKERS: عدد الـ threads المتوازية (5 أسرع من 3)
# WORKER_POLL_INTERVAL: كل كم ثانية يفحص المهام (3 أسرع من 5)
# MAX_RETRY_COUNT: عدد المحاولات قبل تعطيل المهمة

ENV MAX_WORKERS=5 \
    WORKER_POLL_INTERVAL=3 \
    MAX_RETRY_COUNT=5

# ═══════════════════════════════════════════════════════════════
# Entrypoint
# ═══════════════════════════════════════════════════════════════

CMD ["python", "worker.py"]